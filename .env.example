# TravelPath Backend - Environment Variables Example
# Copy this file to .env and fill in your values

# Project
PROJECT_NAME=TravelPath

# Google Maps API Key (required)
MAPS_API_KEY=your_google_maps_api_key_here

# Firebase (choose one method)
# Option 1: Path to credentials file (local development)
FIREBASE_CREDENTIALS_PATH=/app/serviceAccountKey.json

# Option 2: JSON string (for cloud deployment like Render)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Firestore database name
FIRESTORE_DATABASE=default

# Weather API (optional)
WEATHER_API_KEY=your_openweathermap_api_key

# MinIO / S3 Compatible Storage
# For local development with Docker:
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=travel-photos
MINIO_USE_SSL=false

# For production (Cloudflare R2, AWS S3, etc.):
# MINIO_ENDPOINT=your-account.r2.cloudflarestorage.com
# MINIO_ROOT_USER=your_access_key
# MINIO_ROOT_PASSWORD=your_secret_key
# MINIO_USE_SSL=true
# MINIO_REGION=auto
