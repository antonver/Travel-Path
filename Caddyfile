# =================================================================
# Caddy Configuration for TravelPath Backend
# =================================================================
# Automatic HTTPS via Let's Encrypt
# =================================================================

travelpath.cocktails.rocks {
    # Reverse proxy to FastAPI backend
    reverse_proxy backend:8000
    
    # Enable compression
    encode gzip
    
    # Logging
    log {
        output stdout
        format console
    }
}
